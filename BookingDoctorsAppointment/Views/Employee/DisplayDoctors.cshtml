@model IEnumerable<BookingDoctorsAppointment.Models.Doctor>

@{
    ViewBag.Title = "Doctors List";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h3 style="padding-top : 20px;font-size:40px">Doctors List</h3>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<br />
<div class="row">


    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="card border-primary mb-2" style="max-width: 30rem;text-align:center">
                <h3 style="padding-top : 10px;padding-left:10px" class="card-title">@item.DoctorFirstName @item.DoctorLastName</h3>
                <div class="card-body card-text" style="font-size:20px">
                    <div>Qualification : @item.Qualification</div>
                    <div>Specialization : @item.Specialization</div>
                    <div>Experience : @item.Experience</div>
                    <div>Contact Details : @item.EmailId</div>
                    <div>Qualification : @item.Qualification</div>
                    <div>@Html.ActionLink("View Time Slots", "Index", "Appointment", new { id = item.Id }, new { @class = "btn btn-primary" })</div>

                </div>
            </div>
        </div>

    }
</div>

